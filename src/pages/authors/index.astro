---
import MainLayout from "@layouts/MainLayout.astro";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

const authorsData = await getCollection("author");
console.log("ðŸš€ ~ authorsData:", authorsData);

---

<MainLayout title="Autores">
    <section class="bg-white dark:bg-gray-900">
        <div class="container px-6 py-10 mx-auto">
            <h1
                class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
            >
                Autores
            </h1>

            <div
                class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2 lg:grid-cols-3"
            >
                {
                    authorsData.map((author) => (
                        <div class="max-w-lg mx-auto my-10 bg-white rounded-lg shadow-md p-5">
                            <Image
                                width={200}
                                height={200}
                                class=" rounded-full mx-auto"
                                src={author.data.avatar}
                                alt="Profile picture"
                            />
                            <h2 class="text-center text-2xl font-semibold mt-3">
                                {author.data.name}
                            </h2>
                            <p class="text-center text-gray-600 mt-1">
                                {author.data.subtitle}
                            </p>
                            <div class="flex justify-center mt-5">
                                <a
                                    href={author.data.twitter}
                                    class="text-blue-500 hover:text-blue-700 mx-3"
                                >
                                    Twitter
                                </a>
                                <a
                                    href={author.data.linkedIn}
                                    class="text-blue-500 hover:text-blue-700 mx-3"
                                >
                                    LinkedIn
                                </a>
                                <a
                                    href={author.data.github}
                                    class="text-blue-500 hover:text-blue-700 mx-3"
                                >
                                    GitHub
                                </a>
                            </div>
                            <div class="mt-5">
                                <h3 class="text-xl font-semibold">Bio</h3>
                                <p class="text-gray-600 mt-2">
                                    {author.data.bio}
                                </p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>
</MainLayout>
