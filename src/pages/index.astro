import { siteConfig } from "@config/site-config";
import { getCollection } from "astro:content";
import MainLayout from "@layouts/MainLayout.astro";
import TypeBlogPost from "@components/TypeBlogPost.astro";

// const posts = await import.meta.glob("./posts-old/*.mdx", { eager: true });

const blogPosts = await getCollection('blog', (post) => !post.data.isDraft );

// 
---

<MainLayout title="Inicio">
	<section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
        <h1 class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white">{siteConfig.siteName}</h1>

		<a href="/blog/1" class="text-blue-600">Blog Paginado</a>
		<a href="/authors" class="text-blue-600">Autores</a>
        <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">

			
			{
				blogPosts.map((post) => (
					<TypeBlogPost post={post} />
				))
			}

